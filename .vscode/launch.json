{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Run file (use .venv site-packages)",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}\\.venv\\Lib\\site-packages"
      }
    }
  ]
}
